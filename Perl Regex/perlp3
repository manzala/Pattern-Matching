@ARGV[0] = "ten_little_monkeys.txt";

while(<>){
#@words = split(//);
if(m/1*/)
{
$_=~s/1/one/g;
}

if(m/2*/){
$_=~s/2/two/g;
}
if(m/3*/){
$_=~s/3/three/g;
}
if(m/4*/){
$_=~s/4/four/g;
}
if(m/5*/){
$_=~s/5/five/g;
}
if(m/6*/){
$_=~s/6/six/g;
}
if(m/7*/){
$_=~s/7/seven/g;
}
if(m/8*/){
$_=~s/8/eight/g;
}
if(m/9*/){
$_=~s/9/nine/g;
}
if(m/0*/){
$_=~s/0/zero/g;
}

print "$_";
}
